datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     String[]
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model ToolPlatform {
  clientId          String
  contactEmail      String?
  createdAt         DateTime @default(now())
  deploymentId      String   @unique
  description       String?
  guid              String
  id                String   @id @default(cuid())
  name              String?
  productFamilyCode String?
  updatedAt         DateTime @updatedAt
  url               String?
  version           String?
}